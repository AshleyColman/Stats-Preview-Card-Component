@model UI.Pages.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Stats Preview Card Component</title>
    <meta name="description" content="Stats preview card component" />
    <meta name="author" content="Ashley Colman" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Lexend+Deca&display=swap" rel="stylesheet">
    <link rel="icon" href="images/favicon-32x32.png" />
</head>
<body>
    <main class="grid-center">
        <section class="card">
            <div class="color-overlay">
                <img class="card-image" src="images\image-header-mobile.jpg" alt="Three people coding in an office." />
            </div>
            <div class="text-container">
                <h1 class="heading">Get <span class="highlight-word">insights</span> that help your business grow.</h1>
                <p class="card-p">Discover the benefits of data analytics and make better decisions regarding revenue, customer experience, and overall efficiency.</p>
                <div class="flex-row">
                    <div class="stat-container">
                        <p class="stat-number">10k+</p>
                        <p class="stat-name">companies</p>
                    </div>
                    <div class="stat-container">
                        <p class="stat-number">314</p>
                        <p class="stat-name">templates</p>
                    </div>
                    <div class="stat-container">
                        <p class="stat-number">12M+</p>
                        <p class="stat-name">queries</p>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
</html>